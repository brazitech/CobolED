Imports CobolED.Forms
Namespace Menu.File
    Public Class OnExit
        Inherits Menu.MenuItemProcessBase

        Private Const STR_COMMENT As String = "The CobolED editor Exit, make sure to save the changes you have made"

        Public Sub New(ByVal cobolEDMainForm As CobolEDMainForm)
            MyBase.New(cobolEDMainForm)
        End Sub

        Public Overrides ReadOnly Property Comment() As String
            Get
                Return STR_COMMENT
            End Get
        End Property

        Public Overrides ReadOnly Property IsEnable() As Boolean
            Get
                Return True
            End Get
        End Property

        Public Overrides Sub Execute()
            CobolEDMainForm.Close()
        End Sub

    End Class
End Namespace
